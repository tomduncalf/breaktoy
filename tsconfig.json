{
  "compilerOptions": {
    "module": "es6",
    "moduleResolution": "node",
    "target": "es6",
    "noImplicitAny": false,
    "sourceMap": true,
    "jsx": "preserve",
    "outDir": "ts-build",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}
